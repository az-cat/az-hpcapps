{
    "variables": {
      "image_name": "",
      "image_publisher": "",
      "image_offer": "",
      "image_sku": "",
      "vm_size": "",
      "resource_group": "",
      "storage_account": "",
      "location": "",
      "subscription_id": "",
      "tenant_id": "",
      "application_id": "",
      "baseimage": "baseimage.sh",
      "app_name": "",
      "appinstaller": "",
      "vnet_name":"",
      "subnet_name": "",
      "vnet_resource_group": ""
    },
    "builders": [
        {
            "type": "azure-arm",
            "subscription_id": "{{user `subscription_id`}}",
            "tenant_id": "{{user `tenant_id`}}",
            "client_id": "{{user `client_id`}}",
            "client_secret": "{{user `client_secret`}}",
  
			"image_publisher": "{{user `image_publisher`}}",
			"image_offer": "{{user `image_offer`}}",
			"image_sku": "{{user `image_sku`}}",

            "resource_group_name": "{{user `resource_group`}}",
            "storage_account": "{{user `storage_account`}}",
            "capture_container_name": "{{user `app_name`}}",
            "capture_name_prefix": "{{user `app_name`}}-{{user `image_name`}}",

            "private_virtual_network_with_public_ip": "false",
            "virtual_network_name": "{{user `vnet_name`}}",
            "virtual_network_resource_group_name": "{{user `vnet_resource_group`}}",
            "virtual_network_subnet_name": "{{user `subnet_name`}}",

            "os_type": "Linux",
            "vm_size":  "{{user `vm_size`}}",
            "ssh_pty": "true",
  
            "location": "{{user `location`}}"
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "{{user `baseimage`}}",
            "destination": "/tmp/baseinstaller.sh"
        },
        {
            "type": "file",
            "source": "{{user `appinstaller`}}",
            "destination": "/tmp/appinstaller.sh"
        },
        {
            "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
            "inline": [
                "chmod +x /tmp/baseinstaller.sh",
                "cat /tmp/appinstaller.sh >> /tmp/baseinstaller.sh",
                "/tmp/baseinstaller.sh",
                "/usr/sbin/waagent -force -deprovision+user && export HISTSIZE=0 && sync"
            ],
            "inline_shebang": "/bin/bash -e",
            "type": "shell",
            "skip_clean": true
        }
    ]
}
  